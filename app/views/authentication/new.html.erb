<div class="container">
<div class="well col-md-4 col-md-offset-4">

<h1>Sign In</h1>

<%= form_tag signin_path do |f| %>

  <% if @sign_in_error %>
    <p>
      <%= @sign_in_error %>
    </p>
  <% end %>


  <div>
    <%= label_tag :email %>
  </div>
  <div class="form-group">
    <%= email_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %>
  </div>

  <div class="form-group">
    <%= password_field_tag :password %>
  </div>
<br>
  <div>
    <%= submit_tag "Sign in" %>
  </div>

<% end %>
</div>
</div>
