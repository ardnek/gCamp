
<p id="notice"><%= notice %></p>

<div class="page-header">

  <div class="pull-right">
    <%= link_to 'Edit', edit_project_task_path(@project, @task), class: 'btn btn-info btn-sm' %>
  </div>

  <h3><%= @task.description %></h3>

<ol class="breadcrumb">
  <li><%= link_to "Projects", projects_path %></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li><%= link_to "Tasks", project_path(@project, @task) %></li>
  <li class="active">Show</li>
</ol>

</div>

<p>
  <strong>Due date:</strong>
  <%= @task.date.try(:strftime, "%m/%d/%Y") %>
</p>

<p>
  <strong>Completed:</strong>
  <%= @task.complete %>
</p>

<h4>Comments</h4>

<% @task.comments.each do |comment| %>
  <%= comment.comment %><br>
  <% end %>

  <%= form_for(@comment) do |f| %>
    <%= f.text_area :comment, class: "form-control" %>
    <%= hidden_field_tag :task_id, @task.id %>
    <%= hidden_field_tag :project_id, @project.id %>
    <%= f.submit "Add Comment" %>
    <% end %>

<%= link_to 'Edit', edit_project_task_path(@project, @task) %> |
<%= link_to 'Back', project_tasks_path %>
