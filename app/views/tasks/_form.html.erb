
  <%= form_for(@task, :html => {class: "form-horizontal"}) do |f| %>

    <% if @task.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %>
        prohibited this task from being saved:</h2>

      <ul class="text-danger">
        <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
        <% end %>


      <div class="form-group">
          <%= f.label :description, class: "col-sm-1 control-label" %>
        <div class="col-sm-4">
          <%= f.text_field :description, class: "form-control" %>
        </div>
      </div>

    <div class="form-group">
      <%= f.label :date, class: "col-sm-1 control-label" %>
      <div class="col-sm-4">
        <%= f.date_field :date, class: "form-control" %>
      </div>
    </div>


    <% if @edit_task == true %>

      <div class="form-group">
      <div class="col-sm-offset-1 col-sm-10">
        <%= f.check_box :complete, class: "checkbox-inline" %>
        <%= f.label :complete %>
      </div>
    </div>

    <% end %>




    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit class: 'btn btn-info btn-sm' %>
      </div>
    </div>

<br>

      <% end %>
