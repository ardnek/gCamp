<div class="container">

  <%= form_for(@task, :html => {class: "form-horizontal"}) do |f| %>

    <% if @task.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %>
        prohibited this task from being saved:</h2>

      <ul class="text-danger">
        <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
        <% end %>

      <div class="form-group">
          <%= f.label :description, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :description %>
        </div>
      </div>

      <div class="form-group">
          <%= f.label :due_date, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.date_field :date %>
        </div>
      </div>


      <% if @edit_task == true %>

      <div class="field">
          <%= f.label :complete %>
          <%= f.check_box :complete %>
      </div>
          <% end %>


    <div class="actions">
      <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit class: 'btn btn-info btn-sm' %>
      </div>
    </div>


<br>

      <% end %>

</div>
