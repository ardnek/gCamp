<div class="page-header">
  <h3><%= title %></h3>
</div>

<%= form_for [@project, @task], html: {class: "form-horizontal"} do |f| %>

<div class="row">
  <div class="col-sm-offset-1 col-sm-4">
    <%= render "shared/error", instance: @task %>
  </div>
</div>

<div class="form-group">
  <%= f.label :description, class: "col-sm-1 control-label" %>
  <div class="col-sm-4">
    <%= f.text_field :description, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :date, class: "col-sm-1 control-label" %>
  <div class="col-sm-4">
    <%= f.date_field :date, class: "form-control" %>
  </div>
</div>

<% if @edit_task == true %>

<div class="form-group">
  <div class="col-sm-offset-1 col-sm-10">
    <%= f.check_box :complete, class: "checkbox-inline" %>
    <%= f.label :complete %>
  </div>
</div>
<% end %>

<div class="form-group">
  <div class="col-sm-offset-1 col-sm-10">
    <%= f.submit class: 'btn btn-info btn-sm' %>
    <%= link_to "Cancel", project_tasks_path, class: 'btn btn-default btn-sm' %>
  </div>
</div>
<% end %>
