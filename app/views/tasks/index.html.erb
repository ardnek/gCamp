<div class="container">



<h1>Tasks</h1>

<div class="pull-right">
<%= link_to 'New Task', new_task_path, class: 'btn btn-success btn-sm' %>
</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.complete %></td>
        <td>

       <div class="pull-right">
          <%= link_to 'Show', task, class: 'btn btn-info btn-xs' %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-xs' %>
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
      </div>

      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
