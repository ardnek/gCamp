<div class="page-header">

  <ol class="breadcrumb">
    <li><%= link_to "Projects", projects_path %></li>
    <li><%= link_to @project.name, project_path(@project) %></li>
    <li class="active">Tasks</li>
  </ol>

<div class="pull-right">
  <%= link_to "All", project_tasks_path(type: "all") %> |
  <%= link_to "Incomplete", project_tasks_path(type: "incomplete") %> |
<%= link_to 'Create Task', new_project_task_path, class: 'btn btn-info btn-sm' %>
</div>

<h3>Tasks for <%= @project.name %></h3>

</div>


<table class="table table-condensed">
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due Date</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="col-md-6"><%= task.description %></td>
        <td class="col-md-1"><%= task.complete %></td>
        <td class="col-md-1"><%= task.date.try(:strftime, "%m/%d/%Y") %></td>


      <td class="col-md-3">
       <div class="pull-right">
          <%= link_to 'Show', project_task_path(@project, task), class: 'btn btn-success btn-xs' %>
          <%= link_to 'Edit', edit_project_task_path(@project, task), class: 'btn btn-warning btn-xs' %>
          <%= link_to 'Destroy', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
      </div>
      </td>

      </tr>
    <% end %>
  </tbody>
</table>
