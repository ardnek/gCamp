<%= form_for(@user, :html => {class: "form-horizontal"}) do |f| %>


<% if @user.errors.any? %>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-4">
    <div class="alert alert-danger">
      <strong><%= pluralize(@user.errors.count, "error") %> prohibited this form from being saved:</strong>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% end %>


<div class="form-group">
  <%= f.label :first_name, class: "col-sm-2 control-label" %>
  <div class="col-sm-4">
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :last_name, class: "col-sm-2 control-label" %>
  <div class="col-sm-4">
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, class: "col-sm-2 control-label" %>
  <div class="col-sm-4">
    <%= f.text_field :email, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Update user", :class => "btn btn-info btn-sm" %>
    <%= link_to "Cancel", users_path, class: 'btn btn-default btn-sm' %>
  </div>
</div>

<% end %>
