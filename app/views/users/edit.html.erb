
<div class="container">
  <h3>Edit User</h3>

<%= form_for(@user, :html => {class: "form-horizontal"}) do |f| %>

<div class="form-group">
<%= f.label :first_name, class: "col-sm-2 control-label" %>
<div class="col-sm-9">
<%= f.text_field :first_name %>
</div>
</div>

<div class="form-group">
<%= f.label :last_name, class: "col-sm-2 control-label" %>
<div class="col-sm-9">
<%= f.text_field :last_name %>
</div>
</div>

<div class="form-group">
<%= f.label :email, class: "col-sm-2 control-label" %>
<div class="col-sm-9">
<%= f.text_field :email %>
</div>
</div>

<div class="actions">
<div class="col-sm-offset-2 col-sm-9">
<%= f.submit "Update user", :class => "btn btn-info btn-sm" %>
</div>
</div>

<% end %>

<br><br>


<div class="col-sm-offset-2 col-sm-2">
<div class="well well-lg">
<%= link_to "Delete user", user_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %>
</div>
</div>


</div>
