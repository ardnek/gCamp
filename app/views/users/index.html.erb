<div class="page-header">
  <div class="pull-right">
    <%= link_to "Create user", new_user_path, class: "btn btn-info btn-sm" %>
  </div>
  <h3>Users</h3>
</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th width="40%">Name</th>
      <th width="58%">Email</th>
      <th width="2%"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.full_name, user %></td>
      <td>
        <% if current_user == user || (current_user.projects & user.projects).any? %>    
          <%= mail_to user.email %>
        <% end %>
      </td>
      <td>
        <% if current_user == user %>
          <%= link_to "Edit", edit_user_path(user) %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
