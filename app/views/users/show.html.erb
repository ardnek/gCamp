<div class="form-horizontal">

<h3><%= @user.full_name %></h3>

 <div class="pull-right">
<%= link_to "Edit", edit_user_path, :class => "btn btn-info btn-sm" %>
<%= link_to "Cancel", users_path, class: 'btn btn-default btn-sm' %>
</div>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= mail_to @user.email %>
</p>

</div>
