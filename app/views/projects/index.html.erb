<table class="table table-condensed">
  <thead>
    <tr>
    <th width="40%">Name</th>
    <th width="30%">Members</th>
    <th width="30%">Tasks</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.projects.each do |project| %>
    <tr>
      <td><%= link_to project.name, project_path(project) %></td>
      <td><%= link_to (project.memberships.count), project_memberships_path(project) %></td>
      <td><%= link_to (project.tasks.count), project_tasks_path(project) %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<% if current_user.pivotal_tracker_token.present? %>

<div class="page-header">
  <h3>Pivotal Tracker Projects</h3>
</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th width="40%">Name</th>
    </tr>
  </thead>

  <tbody>
    <% @tracker_projects.each do |project| %>
    <tr>
      <td><%= link_to project.name, tracker_project_path(project.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
