<div class="page-header">
  <h3><%= title %></h3>
</div>

<%= form_for(@project, html: {class: "form-horizontal"}) do |f| %>

<% if @project.errors.any? %>
<div class="form-group">
  <div class="col-sm-offset-1 col-sm-4">
    <div class="alert alert-danger">
      <strong><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</strong>
      <ul>
        <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% end %>

<div class="form-group">
  <%= f.label :name, class: "col-sm-1" %>
  <div class="col-sm-4">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-1 col-sm-10">
    <%= f.submit class: "btn btn-info btn-sm" %>
    <%= link_to "Cancel", projects_path, class: 'btn btn-default btn-sm' %>
  </div>
</div>

<% end %>
