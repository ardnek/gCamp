<div class="page-header">
  <% if owner? %>
  <div class="pull-right">
    <%= link_to "edit", edit_project_path(@project), :class => "btn btn-info btn-sm" %>
    <%= link_to "delete", project_path(@project), method: :delete, :class => "btn btn-danger btn-sm" %>
  </div>
  <% end %>
  <h3><%= @project.name %></h3>
</div>

<ol class="breadcrumb">
  <li><%= link_to "Projects", projects_path %></li>
  <li class="active">Tasks</li>
</ol>
<%= link_to pluralize(@project.tasks.count, "Task"), project_tasks_path(@project) %><br>
<%= link_to pluralize(@project.memberships.count, "Member"), project_memberships_path(@project) %>
<br><br>
<% if owner? %>
<div class="well">
  <strong><p>Delete Project</p></strong>
  <p>Deleting this project will also delete <%= pluralize(@project.memberships.count, "membership") %>, <%= pluralize(@project.tasks.count, "task") %> and associated comments.</p>
  <%= link_to 'Delete', project_path(id: @project.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
</div>
<% end %>
