<% if instance.errors.any? %>
<div class="form-group">
  <div class="col-sm-10 col-sm-offset-2">
    <div class="alert alert-danger">
      <strong><%= pluralize(instance.errors.count, "error") %> prohibited this post from being saved:</strong>

      <ul>
        <% instance.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% end %>

<%= render "layouts/errors", instance: @organization %>

<div class="container">
  <% if notice %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
  <% end %>
  <%= yield %>
</div>
